@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Harmony.Repositories.Entities.Appointment

@{
    ViewData["Title"] = "SuaAppointment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Hãy Sửa Appointment</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="HomeAdmin" asp-action="SuaAppointment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" value="@ViewBag.appointment.AppointmentId" />
            <div class="form-group">
                <label class="control-label">Customer</label>
                <select class="form-control" asp-for="CustomerId">
                    <option value="" selected>Select Customer</option>
                    @foreach (var customer in ViewBag.list_customer)
                    {
                        @if (ViewBag.appointment.CustomerId == customer.UserId)
                        {
                            <option selected value="@customer.UserId">@customer.Name</option>
                        } 
                        else
                        {
                            <option value="@customer.UserId">@customer.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Stylist</label>
                <select class="form-control" asp-for="StylistId">
                    <option value="" selected>Select Stylist</option>
                    @foreach (var stylist in ViewBag.list_stylist)
                    {
                        @if (ViewBag.appointment.StylistId == stylist.UserId)
                        {
                            <option selected value="@stylist.UserId">@stylist.Name</option>
                        }
                        else
                        {
                            <option value="@stylist.UserId">@stylist.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Service</label>
                <select class="form-control" asp-for="ServiceId">
                    <option value="" selected>Select Service</option>
                    @foreach (var service in ViewBag.list_service)
                    {
                        @if (ViewBag.appointment.ServiceId == service.ServiceId)
                        {
                            <option selected value="@service.ServiceId">@service.Name</option>
                        }
                        else
                        {
                            <option value="@service.ServiceId">@service.Name</option>
                        }
                        
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Registration Date </label>
                <input class="form-control" asp-for="AppointmentDate" value="@ViewBag.date_time" type="datetime-local" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <select class="form-control" asp-for="Status">
                    @if (ViewBag.appointment.Status == "Waiting")
                    {
                        <option value="Waiting" selected>Waiting</option>
                    }
                    else
                    {
                        <option value="Waiting">Waiting</option>
                    }
                    @if (ViewBag.appointment.Status == "Scheduled")
                    {
                        <option value="Scheduled" selected>Scheduled</option>
                    }
                    else
                    {
                        <option value="Scheduled">Scheduled</option>
                    }
                    @if (ViewBag.appointment.Status == "Cancelled")
                    {
                        <option value="Cancelled" selected>Cancelled</option>
                    }
                    else
                    {
                        <option value="Cancelled">Cancelled</option>
                    }
                    @if (ViewBag.appointment.Status == "Finished")
                    {
                        <option value="Finished" selected>Finished</option>
                    }
                    else
                    {
                        <option value="Finished">Finished</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

