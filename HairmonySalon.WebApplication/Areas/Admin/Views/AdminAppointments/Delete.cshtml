@model IEnumerable<HarmonySalon.Reponsitories.Entities>

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <h4>Appointment Details</h4>
    <hr />
    <dl class="row">
        <!-- Appointment Date -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>

        <!-- Status -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <!-- Customer Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>

        <!-- Stylist Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stylist.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stylist.FullName)
        </dd>

        <!-- Service Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>

        <!-- Duration -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Duration) @(" minutes")
        </dd>

        <!-- Appointment ID (Hidden field for deletion) -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentId)
        </dd>
    </dl>

    <!-- Delete Form -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="AppointmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
